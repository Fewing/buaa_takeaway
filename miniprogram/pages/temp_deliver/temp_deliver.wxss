.express_content::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 200%;
  height: 200%;
  transform: scale(0.5);
  transform-origin: 0 0;
  pointer-events: none;
  box-sizing: border-box;
  border-top: 0 solid #2d8cf0;
  border-top-width: 1px;
  border-bottom: 0 solid #e9eaec;
  border-bottom-width: 1px;
}

